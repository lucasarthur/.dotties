(defmacro keymap-global-sets (command &rest keys)
  `(progn
     ,@(mapcar (lambda (key)
                 `(keymap-global-set ,key ,command))
               keys)))

(keymap-global-set "C-s" 'isearch-forward-regexp)
(keymap-global-set "C-r" 'isearch-backward-regexp)
(keymap-global-set "C-M-s" 'isearch-forward)
(keymap-global-set "C-M-r" 'isearch-backward)
(keymap-global-set "M-|" 'align-regexp)
(keymap-global-set "C-<return>" 'start-line-down)
(keymap-global-set "C-S-<return>" 'start-line-above)
(keymap-global-set "C-x C-d" 'dired)
(keymap-global-set "C-;" 'comment-line)
(keymap-global-set "C-S-<down>" 'duplicate-line-down)
(keymap-global-set "C-S-<up>" 'duplicate-line)
(keymap-global-set "C-x f" 'find-file)
(keymap-global-set "C-c C-<left>" 'windmove-swap-states-left)
(keymap-global-set "C-c C-<right>" 'windmove-swap-states-right)
(keymap-global-set "C-c C-<up>" 'windmove-swap-states-up)
(keymap-global-set "C-c C-<down>" 'windmove-swap-states-down)
(keymap-global-set "M-/" 'hippie-expand)
(keymap-global-set "C-c C-k C-a" 'kill-all-buffers)
(keymap-global-set "C-c C-k C-o" 'kill-other-buffers)
(keymap-global-set "C-c C-p" 'find-file-at-point)
(keymap-global-set "C-c C-s C-c" 'shell-command)
(keymap-global-set "C-c C-s C-a" 'async-shell-command)

(keymap-global-sets 'compile "C-c C-x C-c" "C-x c")
(keymap-global-sets 'query-replace-global "M-%" "C-c C-/" "C-x C-/")

(provide 'keymaps)
